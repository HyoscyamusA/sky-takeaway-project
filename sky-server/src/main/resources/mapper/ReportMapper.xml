<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.ReportMapper">

    <select id="sumBytTurnoverMap" resultType="java.lang.Double">
        select  sum(amount) from orders
        <where>
            <if test="begin != null">
                and order_time &gt; #{begin}
            </if>
            <if test="end != null">
                and order_time &lt; #{end}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>

    </select>
    <select id="sumByUserMap" resultType="java.lang.Integer">
        select count(*) from user
        <where>
            <if test="begin != null">
                and create_time &gt; #{begin}
            </if>
            <if test="end != null">
                and create_time &lt; #{end}
            </if>
        </where>
    </select>
    <select id="sumOrdersByMap" resultType="java.lang.Integer">
        select  count(*) from orders
        <where>
            <if test="begin != null">
                and order_time &gt; #{begin}
            </if>
            <if test="end != null">
                and order_time &lt; #{end}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>
    <select id="sumOrdersLikeTime" resultType="java.lang.Integer">
        select count(*) from orders
        <where>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="dateStr != null">
                and order_time like  #{dateStr}
            </if>
        </where>
    </select>
    <select id="getOrderByStatus" resultType="java.lang.Integer">
        select count(*) from orders
        <where>
            <if test="status != null">
                status = #{status}
            </if>
        </where>
    </select>
</mapper>